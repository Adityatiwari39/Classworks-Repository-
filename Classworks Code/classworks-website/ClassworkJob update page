<!-- Popup Modal -->
<div class="popup-overlay" id="popupModal">
    <div class="popup-content">
        <div class="popup-icon" id="popupIcon">üîî</div>
        <h2 class="popup-title" id="popupTitle">Coming Soon!</h2>
